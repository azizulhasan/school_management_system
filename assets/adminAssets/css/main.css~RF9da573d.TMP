*{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  font-size: 0.9rem!important;
}
html, body, section{
  width: 100%;
  height: 100%;
}
section{
	position: relative;
	background-image: url(../images/aaron-burden-1zR3WNSTnvY-unsplash.jpg);
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
}
section::after{
	content: '';
	position: absolute;
	background-color: rgba(0,0,0,0.5);
	width: 100%;
	height: 100%;
}
.login{
  width: 80%;
  position: absolute;
  z-index: 100;
  top:50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 5px;
  box-shadow: 0px 0px 15px rgba(0,0,0,0.7);
}

.log-flex{
  display: flex;
  justify-content: center;
  border-radius: 5px;
}
.log-flex a{
  text-decoration: none;
}

@media (min-width: 576px) {
  .login {
    width: 80%; } }

@media (min-width: 768px) {
  .login {
    width: 50%; } }

@media (min-width: 992px) {
  .login {
    width: 50%; } }

@media (min-width: 1200px) {
  .login {
    width: 30%; } }
